{
  "appId": "com.timeblock.planner",
  "productName": "TimeBlockPlanner",
  "directories": {
    "output": "release",
    "buildResources": "electron/resources"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    {
      "from": "public/assets",
      "to": "assets",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "public/audio",
      "to": "audio",
      "filter": [
        "**/*"
      ]
    },
    "package.json"
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "winston365",
      "repo": "timeblock_new",
      "releaseType": "release"
    }
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "electron/resources/icon.ico",
    "artifactName": "TimeBlockPlanner-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "electron/resources/1.ico",
    "uninstallerIcon": "electron/resources/1.ico",
    "installerHeaderIcon": "electron/resources/1.ico",
    "installerHeader": "electron/resources/2.bmp",
    "installerSidebar": "electron/resources/3.bmp"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "electron/resources/icon.icns",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "electron/resources/icon.png",
    "category": "Utility"
  }
}