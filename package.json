{
  "name": "timeblockplanner",
  "private": true,
  "version": "1.0.191",
  "type": "module",
  "main": "dist-electron/main/index.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/winston365/timeblock_new.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "bump": "npm version patch -m \"chore: bump version to %s\"",
    "electron:build": "node scripts/build-electron.cjs",
    "electron:dev": "npm run electron:build && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:prod": "npm run build && npm run electron:build && cross-env NODE_ENV=production electron .",
    "dist": "vite build && npm run electron:build && electron-builder",
    "dist:win": "npm run dist -- --win",
    "dist:mac": "npm run dist -- --mac",
    "dist:linux": "npm run dist -- --linux"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@orama/orama": "^3.1.16",
    "@types/canvas-confetti": "^1.9.0",
    "canvas-confetti": "^1.9.4",
    "dexie": "^4.0.0",
    "dexie-react-hooks": "^1.1.7",
    "electron-updater": "^6.6.2",
    "firebase": "^10.7.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "recharts": "^2.13.2",
    "remark-gfm": "^4.0.1",
    "zod": "^4.2.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fake-indexeddb": "^6.2.5",
    "madge": "^8.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^7.2.2",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.3"
  }
}
